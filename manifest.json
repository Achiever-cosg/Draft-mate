{
  "name": "DraftMail AI",
  "description": "AI-powered email reply generator",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
      "https://draft-mate-server.vercel.app/*",
      "*://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
      {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "run_at": "document_end"
      }
  ],
  "web_accessible_resources": [
  {
    "resources": [ "assets/ext-icon.png" ],
    "matches": ["*://mail.google.com/*"]
  }
],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "DrafMail AI",
    "default_popup": "popup.html"
  }
}